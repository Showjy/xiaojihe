<wxs src="tools.wxs" module="tools" />
<wxs src="analysis.wxs" module="analysis" />
<view class="container">
  <view class="top-container">
    <image class="img" src="../../images/background.jpg" mode="widthFix"></image>
    <view class="top-info">
      <text style="font-size:50rpx;color:white;">{{Name}}</text>
      <picker value="{{Index}}" range="{{Region}}" bindchange="regionchange">
        <view class="regionselect">{{Region[Index]}}
          <view class="sign"></view>
        </view>
      </picker>
      <text>综合评分：1959</text>
      <text>综合分排名：#24.9w</text>
    </view>
  </view>
  <view class="buttonselect">
    <button bindtap='showstatics'>战斗统计</button>
    <button bindtap='showmatches'>比赛记录</button>
    <button bindtap='showanalysis'>作弊分析</button>
  </view>

  <view class="statics" style="display:{{staticsvisibility}}">
    <view class="statics-title">
      <text style="color:#63B8FF;">单人模式</text>
    </view>
    <view class="statics-detail">
      <view class="box" style="background-color:#63B8FF;color:white;">
        <text>{{Sinmode.stats.rating}}</text>
        <text>Rating</text>
      </view>
      <view class="box">
        <text>{{Sinmode.stats.win_matches_cnt}}</text>
        <text>吃鸡数</text>
      </view>
      <view class="box">
        <text>{{Sinmode.stats.topten_matches_cnt}}</text>
        <text>前十数</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Sinmode.stats.kills_sum,Sinmode.stats.matches_cnt)}}</text>
        <text>场均击杀</text>
      </view>
      <view class="box" style="background-color:#63B8FF;color:white;">
        <text>{{Sinmode.ranks.rating}}</text>
        <text>排名</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Sinmode.stats.win_matches_cnt,Sinmode.stats.matches_cnt)}}</text>
        <text>吃鸡率</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Sinmode.stats.topten_matches_cnt,Sinmode.stats.matches_cnt)}}</text>
        <text>前十率</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Sinmode.stats.kills_sum,Sinmode.stats.deaths_sum)}}</text>
        <text>k/d</text>
      </view>
    </view>

    <view class="statics-title">
      <text style="color:#CD4F39;">双人模式</text>
    </view>
    <view class="statics-detail">
      <view class="box" style="background-color:#CD4F39;color:white;">
        <text>{{Duomode.stats.rating}}</text>
        <text>Rating</text>
      </view>
      <view class="box">
        <text>{{Duomode.stats.win_matches_cnt}}</text>
        <text>吃鸡数</text>
      </view>
      <view class="box">
        <text>{{Duomode.stats.topten_matches_cnt}}</text>
        <text>前十数</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Duomode.stats.kills_sum,Duomode.stats.matches_cnt)}}</text>
        <text>场均击杀</text>
      </view>
      <view class="box" style="background-color:#CD4F39;color:white;">
        <text>{{Duomode.ranks.rating}}</text>
        <text>排名</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Duomode.stats.win_matches_cnt,Duomode.stats.matches_cnt)}}</text>
        <text>吃鸡率</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Duomode.stats.topten_matches_cnt,Duomode.stats.matches_cnt)}}</text>
        <text>前十率</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Duomode.stats.kills_sum,Duomode.stats.deaths_sum)}}</text>
        <text>k/d</text>
      </view>
    </view>

    <view class="statics-title">
      <text style="color:#EE9A00;">四人模式</text>
    </view>
    <view class="statics-detail">
      <view class="box" style="background-color:#EE9A00;color:white;">
        <text>{{Quamode.stats.rating}}</text>
        <text>Rating</text>
      </view>
      <view class="box">
        <text>{{Quamode.stats.win_matches_cnt}}</text>
        <text>吃鸡数</text>
      </view>
      <view class="box">
        <text>{{Quamode.stats.topten_matches_cnt}}</text>
        <text>前十数</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Quamode.stats.kills_sum,Quamode.stats.matches_cnt)}}</text>
        <text>场均击杀</text>
      </view>
      <view class="box" style="background-color:#EE9A00;color:white;">
        <text>{{Quamode.ranks.rating}}</text>
        <text>排名</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Quamode.stats.win_matches_cnt,Quamode.stats.matches_cnt)}}</text>
        <text>吃鸡率</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Quamode.stats.topten_matches_cnt,Quamode.stats.matches_cnt)}}</text>
        <text>前十率</text>
      </view>
      <view class="box">
        <text>{{tools.rate(Quamode.stats.kills_sum,Quamode.stats.deaths_sum)}}</text>
        <text>k/d</text>
      </view>
    </view>
  </view>

  <view class="matches" style="display:{{matchesvisibility}};width:100%" wx:for="{{matches}}">
    <view class="weui-cells weui-cells_after-title" style="width:100%">
      <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd" wx:for="{{tools.queuehandle(item.queue_size)}}" style="position:absolute;left:{{item}}rpx;">
          <image src="../../images/man.png" style="height:30rpx;width:30rpx;"></image>
        </view>
        <view class="weui-cell__bd">
          <text class="sfont" style="position:absolute;left:25rpx;;top:60rpx">{{tools.getdate(item.started_at,time)}}</text>
          <view style="position:absolute;left:150rpx;;top:20rpx">
            #{{item.participant.stats.rank}}
            <text class="sfont">/{{item.total_rank}}</text>
          </view>
          <text class="sfont" style="position:absolute;left:300rpx;;top:60rpx">排名变动</text>
          <text style="position:absolute;left:300rpx;;top:20rpx">{{tools.getnum(item.participant.stats.rating_delta)}}</text>
          <text class="sfont" style="position:absolute;left:450rpx;;top:60rpx">击杀</text>
          <text style="position:absolute;left:450rpx;;top:20rpx">{{item.participant.stats.combat.kda.kills}}</text>
          <text class="sfont" style="position:absolute;left:550rpx;;top:60rpx">伤害</text>
          <text style="position:absolute;left:550rpx;;top:20rpx">{{tools.getnum(item.participant.stats.combat.damage.damage_dealt)}}</text>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access">详细</view>
      </navigator>
    </view>
  </view>

  <view class="analysis" style="display:{{analysisvisibility}}">
  <text>
  {{analysis.analysis(tools.sum(Quamode.stats.win_matches_cnt,Duomode.stats.win_matches_cnt,Sinmode.stats.win_matches_cnt),tools.sum(Quamode.stats.topten_matches_cnt,Duomode.stats.topten_matches_cnt,Sinmode.stats.topten_matches_cnt),tools.compare(Quamode.stats.kills_max,Duomode.stats.kills_max,Sinmode.stats.kills_max),tools.sum(Quamode.stats.kills_sum,Duomode.stats.kills_sum,Sinmode.stats.kills_sum),tools.sum(Quamode.stats.matches_cnt,Duomode.stats.matches_cnt,Sinmode.stats.matches_cnt),tools.sum(Quamode.stats.headshot_kills_sum,Duomode.stats.headshot_kills_sum,Sinmode.stats.headshot_kills_sum),tools.sum(Quamode.stats.deaths_sum,Duomode.stats.deaths_sum,Sinmode.stats.deaths_sum))}}
  </text>
  </view>
</view>